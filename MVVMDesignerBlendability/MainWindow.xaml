<Window x:Class="MVVMDesignerBlendability.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MVVMDesignerBlendability"
        xmlns:ViewModels="clr-namespace:MVVMDesignerBlendability"
        mc:Ignorable="d"
        
        Title="MainWindow" Height="350" Width="525"
        >

    <Window.Resources>
        <ViewModels:ViewModelLocator x:Key="ApplicationViewModelLocator"></ViewModels:ViewModelLocator>
    </Window.Resources>

    <Window.DataContext>
        <Binding Source="{StaticResource ApplicationViewModelLocator}" Path="MainViewModel"></Binding>
    </Window.DataContext>
    
    <StackPanel Orientation="Vertical">
        <TextBox Text="{Binding TestString, Mode=TwoWay}"></TextBox>
        <Label Content="{Binding TestString, Mode=TwoWay}" Width="100" Background="LightBlue"></Label>
        <TextBox Text="{Binding TestString, Mode=TwoWay}"></TextBox>
    </StackPanel>
</Window>
